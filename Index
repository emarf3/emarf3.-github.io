from turtle import *
speed(0)
fillcolor('red')
pencolor('black')

def draw_heart():
    begin_fill()
    left(40)
    forward(100)
    circle(50, 210)
    right(140)
    circle(50, 210)
    forward(100)
    end_fill()
    right(40)

for i in range(10):
    penup()
    goto(-450 + i * 100, 0)
    setheading(0)
    pendown()
    draw_heart()

penup()
goto(-200, -150)
color('black')
write("I Love You Romarie â™¥", font=("Arial", 18, "bold"))

hideturtle()
done()
